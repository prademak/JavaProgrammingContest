@model JavaProgrammingContest.Domain.Entities.Assignment
@Html.Partial("../Assignment/_menuBalk") 
<h2>Wijzigen</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Assignment</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CodeGiven)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CodeGiven)
            @Html.ValidationMessageFor(model => model.CodeGiven)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaxSolveTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxSolveTime)
            @Html.ValidationMessageFor(model => model.MaxSolveTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RunCodeInput)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RunCodeInput)
            @Html.ValidationMessageFor(model => model.RunCodeInput)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RunCodeOuput)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RunCodeOuput)
            @Html.ValidationMessageFor(model => model.RunCodeOuput)
        </div>

        <p>
            <input type="submit" value="Opslaan" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Terug naar lijst", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
