@model JavaProgrammingContest.Web.Models.RegisterExternalLogonModel
@{
    ViewBag.Title = "Registreer";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

@using (Html.BeginForm("ExternalLogonConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>LinkedIn</legend>
        <p>
         Hallo  @ViewBag.Name, je bent succesvol geregistreerd met <strong>@ViewBag.ProviderDisplayName</strong>.
            Geef uw e-mailadres om door te gaan.
        </p>
        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLogonData)
        @Html.HiddenFor(m => m.Name)
        @Html.HiddenFor(m => m.Functie)
        <input type="submit" value="Register" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
